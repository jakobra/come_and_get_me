<% title "Menu Nodes" %>

<table class="menu_nodes">
	<tr>
		<th>Title</th>
		<th>Url</th>
	</tr>
	<% for menu_node in @menu_nodes %>
		<tr class="bold">
			<td><%=h menu_node.title %></td>
			<td><%=h menu_node.url %></td>
      		<td><%= link_to "Show", menu_node %></td>
			<td><%= link_to "Edit", edit_menu_node_path(menu_node) %></td>
			<td><%= link_to "Destroy", menu_node, :confirm => 'Are you sure?', :method => :delete %></td>
		</tr>
		<% menu_node.children.each do |child| %>
		<tr>
			<td class="child"><%=h child.title %></td>
			<td><%=h child.url %></td>
      		<td><%= link_to t("common.show"), child %></td>
			<td><%= link_to t("common.edit"), edit_menu_node_path(child) %></td>
			<td><%= link_to t("common.destroy"), child, :confirm => t("common.sure"), :method => :delete %></td>
		</tr>
		<% end %>
	<% end %>
</table>

<p><%= link_to "New Menu Node", new_menu_node_path %></p>
