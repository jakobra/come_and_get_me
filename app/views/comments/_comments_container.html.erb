<% content_tag :div, :class => "comments_container left" do %>
	<%= content_tag(:h3, t("comments.comments")) %>
	
	<% div_for(commentable, "comments", :class => "comments") do %>
		<% unless commentable.comments.approved.blank? %>
			<%= render :partial => "comments/comment", :collection => commentable.comments.approved %>
		<% else %>
			<%= content_tag(:p, t("comments.no_comments")) %>
		<% end %>
	<% end %>
	<% if logged_in? %>
		<div class="left clear_left">
			<%= link_to_remote t("comments.post_comment"), :url => url, :method => :get %>
		</div>
	<% end %>
	
<% end %>