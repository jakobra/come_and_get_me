<% title "Comments" %>
<% main_class "large_width" %>

<h1>Comments</h1>

<table border="0">
	<tr>
		<th>Approved</th>
		<th>Date</th>
		<th>User</th>
		<th>Comment</th>
		<th></th>
	</tr>
	
	<% @comments.each do |comment| %>
		<% content_tag_for :tr, comment do %>
			<td><%= comment.approved %></td>
			<td><%= time_ago_in_words(comment.created_at) %></td>
			<td><%= link_to comment.user.login, comment.user %></td>
			<td><%= truncate comment.content, 30 %></td>
			<td><%= link_to 'Approve/Unapprove', approve_comment_path(comment), :method => :put %></td>
		<% end %>
	<% end %>
</table>