// Javascript to be executed

<% if @comment.new_record? %>
	$('new_comment').insert({top: '<%= escape_javascript(error_messages_for("comment")) %>'})
<% else %>
	hide_box();
	$('<%= escape_javascript(dom_id(@comment.commentable, "comments")) %>').insert({bottom: '<%= escape_javascript(render :partial => @comment) %>'});
	new Effect.Highlight('<%= escape_javascript(dom_id(@comment)) %>', {duration: 0.5});
	<% flash.discard %>
<% end %>

