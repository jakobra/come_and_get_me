<div class="side_module recent_records">
	<h5><%= title %></h5>
	<div class="tabs small">
		<% tab_service.tabs.each do |k| %>
			<span class="<%= tab_service.left_class(k) %>"></span>
			<span class="<%= tab_service.tab_class(k) %>"><%= link_to t(k), recent_track_records_tracks_path(:gender => k) %></span>
			<span class="<%= tab_service.right_class(k) %>"></span>
		<% end %>
	</div>
	<div class="golden_border">
		<p class="small">
			<% tab_service.content.each do |race| %>
				<%= link_to race.time.strftime("%H:%M:%S"), race_path(race) unless race.time.blank? %>, <%= truncate(race.track.title,:length => 25) unless race.track.blank? %><br />
			<% end %>
		</p>
	</div>
	<div class="bottom"></div>
</div>