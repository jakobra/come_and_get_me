<% form_for @page do |f| %>
	<%= f.error_messages %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :permalink %><br />
		<%= f.text_field :permalink %>
	</p>
	<p>
		<%= f.label :public %><br />
		<%= f.check_box :public %>
	</p>
	<p>
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	</p>
	<p>
		<%= f.label :style %><br />
		<%= f.text_area :style, :rows => 4 %>
	</p>
	<p>
		<%= f.submit "Submit" %>
		<%= f.submit "Preview", :name => "preview_button" %>
	</p>
<% end %>
