<% title @page.title %>
<% main_class "large_width page" %>


<h1><%=h @page.title %></h1>

<%= RedCloth.new(@page.content).to_html %>


<% if admin? %>
	<p>
		<%= link_to "Edit", edit_page_path(@page) %> |
		<%= link_to "Destroy", @page, :confirm => 'Are you sure?', :method => :delete %> |
		<%= link_to "View All", pages_path %>
	</p>
<% end %>