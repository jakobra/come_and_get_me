<% title @page.title %>
<% main_class "small_width page" %>

<% content_for :left_side do %>
	<%= render "side_modules/todo" %>
<% end %>

<h1><%=h @page.title %></h1>

<%= RedCloth.new(@page.content).to_html %>

<% if permitted_to? :manage, @page %>
	<p>
		<%= link_to "Edit", edit_page_path(@page) %> |
		<%= link_to "Destroy", @page, :confirm => 'Are you sure?', :method => :delete %> |
		<%= link_to "View All", pages_path %>
	</p>
<% end %>

<% content_for :right_side do %>
	<%= render "side_modules/local_race_tracks", :area => @area %>
<% end %>