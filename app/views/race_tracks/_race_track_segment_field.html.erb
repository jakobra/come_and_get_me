<div class="race_track_segment">
	<% fields_for race_track_segment_field do |f| %>
		<%= f.hidden_field :id, :name => "race_track_segments[][id]" %>
		
		<p style="display:inline;">
			<%= f.collection_select :track_id, Track.all, :id, :name, {:prompt => "#{t("common.select")} #{t("activerecord.models.track.one")}"}, {:name => "race_track_segments[][track_id]"} %>
		</p>
		
		<p style="display:inline;">
			<%= f.label :quantity, t("activerecord.attributes.race_track_segment.quantity") %>:
			<%= f.text_field :quantity, :name => "race_track_segments[][quantity]", :size => "2" %><br />
		</p>

		<%= link_to_function t("common.remove"), "this.up('.race_track_segment').remove()" %>

	<% end %>
</div>