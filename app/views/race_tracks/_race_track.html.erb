<tr class="<%= cycle "odd", "even" %>">
	<%= content_tag :td, link_to(race_track.title, race_track) %>
	<%= content_tag :td, link_to(t("race_tracks.record"), records_race_track_path(race_track)), :class => "record" %>
	<% if permitted_to? :update, race_track %>
		<%= content_tag :td, link_to(t("common.edit"), edit_race_track_path(race_track)), :class => "edit" %>
	<% end %>
	
	<% if permitted_to? :destroy, race_track %>
		<%= content_tag :td, link_to(t("common.destroy"), race_track, :confirm => t("common.sure"), :method => :delete), :class => "destroy" %>
	<% end %>
</tr>