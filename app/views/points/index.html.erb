<h1>Listing points</h1>
<%= @points.size %><br />
<table>
	<tr>
		<th>Longitude</th>
		<th>Latitude</th>
		<th>Elevation</th>
		<th>Point created at</th>
	</tr>

<% @points.each do |point| %>
  <tr>
	<td><%= h point.longitude %></td>
	<td><%= h point.latitude %></td>
	<td><%= h point.elevation %></td>
	<td><%= h point.point_created_at %></td>
    <td><%= link_to 'Show', point %></td>
    <td><%= link_to 'Edit', edit_point_path(point) %></td>
    <td><%= link_to 'Destroy', point, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New point', new_track_point_path %>