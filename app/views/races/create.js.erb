<% flash.discard %>

<script type="text/javascript" charset="utf-8">
	<% unless @race.new_record? %>
		$(".races").append('<%= escape_javascript(render :partial => @race, :locals => {:authorized => authorized?(@training)}) %>');
		$(".trainings_show fieldset").html('<%= escape_javascript(render :partial => "trainings/new_race_form", :locals => {:race => @training.races.build}) %>');
	<% else %>
		$(".trainings_show fieldset").html('<%= escape_javascript(render :partial => "trainings/new_race_form", :locals => {:race => @race}) %>');
	<% end %>
</script>