<% title "#{t("common.edit")} #{@track.title}" %>

<% content_for :head do %>
	<script src="http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=false&amp;key=<%= APP_CONFIG["google_maps_api_key"] %>" type="text/javascript"></script>
	<%= javascript_include_tag "maps" %>
	
	<% if  !@track.tracksegments.blank? and @track.tracksegments.last.new_record? %>
		<script type="text/javascript" charset="utf-8">
			//<![CDATA[
			<% @track.tracksegments.last.points.each do |point| %>
				Map.track_points.push(new GLatLng(<%= point.latitude %>, <%= point.longitude %>));
			<% end %>
			//]]>
		</script>
	<% end %>
	
	<%= javascript_tag "Map.set_options({click_listener: true, track_version:#{@track.version}});" %>
	<%= javascript_include_tag "tooltips" %>
	
<% end %>

<% content_for :right_side do %>
	<%= render "side_modules/beta" %>
<% end %>

<%= render :partial => 'form', :locals => {:submit => t("common.edit")} %>

<%= loading_div %>