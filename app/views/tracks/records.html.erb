<% title "#{@track.title} - #{t("tracks.record")}" %>

<h1><%= "#{t("tracks.records.records_for")} #{@track.title}" %></h1>

<ol>
	<% @track.races.find(:all, :order => "time").each do |race| %>
		<li><%= link_to race.user.login, user_path(race.user) %>, <%= race.event.name %><%=", #{race.time.strftime("%H:%M:%S")}" unless race.time.blank? %></li>
	<% end %>
</ol>

<%= link_to @track.title, track_path(@track) %> |
<%= link_to t("activerecord.models.track.other"), tracks_path %>