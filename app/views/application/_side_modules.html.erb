<% content_for side_modules.to_sym do %>
	<% after_side_content.each do |menu_node_side_module| %>
		<%= render_side_module_html menu_node_side_module.side_module %>
	<% end %>
<% end %>

<% if content_for?(side_modules.to_sym) %>
	<%= content_tag :div, :class => "xsmall_width #{side_module_class}" do %>
		<% yield side_modules.to_sym %>
	<% end %>
<% end %>