<% content_tag :div, :class => "large_width" do %>
	
	<% content_tag :div, :id => "authentication_info" do %>
		<% if logged_in? %>
			Logged in as <span class="bold"><%= link_to (h current_user.login), current_user %></span> | <%= link_to "Logout", logout_path %>
		<% else %>
			<%= link_to "Login", login_path %> or 
			<%= link_to "Sign Up", signup_path %>
		<% end %>
	<% end %>
	
	<% content_tag :div, :id => "locations" do %>
		<%= link_to "Home", root_path %> | 
		<%= link_to "Emails", emails_path %> | 
		<%= link_to "Race Tracks", race_tracks_path %> |
		<%= link_to "Tracks", tracks_path %> |
		<%= link_to "Statistics", :controller => :statistics %> |
		<%= link_to "Users", users_path %>
	<% end %>
	
<% end %>