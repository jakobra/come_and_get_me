<% title "New Training"%>
<% main_class "large_width" %>

<h1>New training</h1>

<% form_for(@training, :url => user_trainings_path(@user)) do |f| %>
	<%= f.error_messages %>
	
	<p>
		<%= f.label :date %><br />
		<%= f.date_select :date %>
	</p>
	
	<p>
		<%= f.label :comment %><br />
		<%= f.text_area :comment, :rows => 5 %>
	</p>
	
	<div id="races">
		<%= render "race_fields", :object => @training.races.build %>
	</div>
	
	<p class="clear_both">
		<%= add_race_field_link("Add race") %>
	</p>
	
	<p>
		<%= f.submit 'Create' %>
	</p>
<% end %>

<p class="clear_both"><%= link_to 'Back', user_trainings_path(@user) %></p>