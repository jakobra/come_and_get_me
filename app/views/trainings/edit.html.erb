<% title "Edit Training" %>

<h1>Editing training</h1>

<% form_for(@training) do |f| %>
	<%= f.error_messages %>
	
	<p>
		<%= f.label :date %><br />
		<%= f.date_select :date %>
	</p>
	
	<p>
		<%= f.label :comment %><br />
		<%= f.text_area :comment, :rows => 5 %>
	</p>
	
	<p>
		<%= f.submit 'Update' %>
	</p>
<% end %>

<%= link_to 'Show', @training %> |
<%= link_to 'Back', user_path(@training.user) %>